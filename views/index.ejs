<%- include('layout/header')%>

<div class="container">
    <div class="row my-3">
        <div class="col-lg-12">
        <% if (message) { %>
         <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
             <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %></strong>
            </div>
        <% } %>
            <div class="table-responsive">
                <% if (movies != '') { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>Movie ID</th>
                                <th>Movie Name</th>
                                <th>Movie Image</th>
                                <th>Released On</th>
                                <th>Movie Description</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% movies.forEach((row,index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><%= row.movie_name %></td>
                                    <td><img src="<%= row.image %>" width="80" class="img-thumbnail" /></td>
                                    <td><%= row.released %></td>
                                    <td><%= row.desc %></td>
                                    <td>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    </td>
                                    <td>
                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        </table>
                <% } else { %>
                <h1 class="text-center text-secondary mt-5">No Movies found in the database</h1>
            <% } %>
        </div>
        </div>
    </div>
</div>

<%- include('layout/footer')%>
