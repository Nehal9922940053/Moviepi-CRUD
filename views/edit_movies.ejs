<%- include('layout/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                <h3 class="text-light">Edit Movie (<%= movie.movie_name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= movie._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Movie Name</label>
                            <input type="text" name="movie_name" class="form-control form-control-lg"  placeholder="Enter Movie Name"  value="<%= movie.movie_name %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="name">Movie Released On</label>
                            <input type="text" name="released" class="form-control form-control-lg"  placeholder="Enter Movie Released Year" value="<%= movie.released %>" required/>
                        </div>
                       
                        <div class="mb-3">
                            <label for="desc">Movie Description</label>
                            <input type="text" name="desc" class="form-control form-control-lg"  placeholder="Enter Movie Description" value="<%= movie.desc %>" required/>
                        </div>
                        <div class="mb-3">
                            <label for="image">Movie Image</label>
                            <input type="file" name="image" class="form-control form-control-lg"/>
                            <img src="/<%= movie.image %>" width="100" class="img-thumbnail mt-1"/>
                        </div>
                        <input type="hidden" name="old_image" value="<%= movie.image %>" />
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" class="btn btn-success btn-lg" value="Update Movie" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')%>
